<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/on_click_background"
    android:orientation="horizontal"
    android:padding="16dp"
    android:weightSum="1">

    <ImageView
        android:id="@+id/acceptance_state"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_wait_for_acceptance" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/examination_name"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="Badanie prostaty"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/examination_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/examination_name"
            android:text="Data"

            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView

            android:id="@+id/examination_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/examination_name"
            android:text="godzina"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/examination_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sala"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_below="@+id/examination_name"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</LinearLayout>